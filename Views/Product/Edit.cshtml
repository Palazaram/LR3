@model NewWebShopApp.Models.Product

<h2>Редагування продукту</h2>

<div class="container">
    <form asp-action="Edit" asp-controller="Product" asp-route-id="@Model.id" method="post" enctype="multipart/form-data">
        <p>
            @Html.LabelFor(m => m.name, "Назва")
            @Html.EditorFor(m => m.name)
            <span asp-validation-for="name"></span>
        </p>
        <p>
            @Html.LabelFor(m => m.img, "Фото")
            <input type="file" name="uploadedFile" />
            @Html.HiddenFor(m => m.img)
            <span asp-validation-for="img"></span>
        </p>
        <p>
            @Html.LabelFor(m => m.price, "Ціна")
            @Html.EditorFor(m => m.price)
            <span asp-validation-for="price"></span>
        </p>
        <p>
            @Html.LabelFor(m => m.box, "Упаковка")
            @Html.EditorFor(m => m.box)
            <span asp-validation-for="box"></span>
        </p>

        <p>
            @Html.LabelFor(m => m.Category.name, "Категорія")
            <select class="select option" asp-for="Category.name" asp-items="ViewBag.Categories"></select>
        </p>

        <p>
            <input type="submit" value="Save" />
        </p>
    </form>
</div>